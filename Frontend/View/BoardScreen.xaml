<Window x:Class="IntroSE.Kanban.Frontend.View.BoardScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BoardScreen" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="{Binding Path=EmailMsg, Mode=OneWay}" HorizontalAlignment="Center"/>
            <ItemsControl x:Name="BoardsList" Margin="10,67,10,85">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="2" Padding="5">
                            <TextBlock Text="{Binding}" FontSize="16"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <Button Content="Create Board" Margin="0,20,0,0" Width="100" Click="CreateBoard_Click"/>
            <Button Content="Delete Board"  Margin="0,20,0,0" Width="100" Click="DeleteBoard_Click"/>
            <Button Content="Logout" Margin="0,20,0,0" Width="100" Click="Logout_Click"/>
            <Button Content="View Board" Margin="0,20,0,0" Width="100" Click="ViewBoard_Click"/>
        </StackPanel>
    </Grid>
</Window>
