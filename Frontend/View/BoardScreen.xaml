<Window x:Class="IntroSE.Kanban.Frontend.View.BoardScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BoardScreen" Height="450" Width="800" Background="#F3F4F6">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="{Binding Path=EmailMsg, Mode=OneWay}"  
                       FontSize="20" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Foreground="#374151" 
                       Margin="0,0,0,10"/>

            <Label Content="Here are your boards:" 
                   FontSize="16" 
                   FontWeight="SemiBold" 
                   Foreground="#1F2937" 
                   Margin="0,10,0,10"/>

            <DataGrid ItemsSource="{Binding Boards}" 
                      x:Name="dataGridView" 
                      SelectionMode="Single" 
                      AutoGenerateColumns="True"
                      RowBackground="#FFFFFF" 
                      AlternatingRowBackground="#F9FAFB" 
                      BorderBrush="#D1D5DB" 
                      HorizontalAlignment="Center" 
                      Width="600" 
                      Margin="0,0,0,20">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <EventSetter Event="MouseDoubleClick" Handler="DataGridRow_MouseDoubleClick"/>
                        <Setter Property="FontSize" Value="14"/>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#2563EB"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="10,5"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
            </DataGrid>

            <StackPanel Orientation="Horizontal" 
                        HorizontalAlignment="Center" >
                <Button Content="Create Board" 
                        Width="120" 
                        Height="40" 
                        Margin="0,20,10,0" 
                        Click="CreateBoard_Click" 
                        Background="#10B981" 
                        Foreground="#FFFFFF" 
                        FontWeight="Bold" 
                        BorderBrush="#059669" 
                        BorderThickness="2"/>
                <Button Content="Delete Board"  
                        Width="120" 
                        Height="40" 
                        Margin="10,20,10,0" 
                        Click="DeleteBoard_Click" 
                        Background="#DC2626" 
                        Foreground="#FFFFFF" 
                        FontWeight="Bold" 
                        BorderBrush="#B91C1C" 
                        BorderThickness="2"/>
                <Button Content="Logout" 
                        Width="120" 
                        Height="40" 
                        Margin="10,20,0,0" 
                        Click="Logout_Click" 
                        Background="#2563EB" 
                        Foreground="#FFFFFF" 
                        FontWeight="Bold" 
                        BorderBrush="#1E40AF" 
                        BorderThickness="2"/>
            </StackPanel>

            <Label Content="{Binding Path=ErrorMessage, Mode=OneWay}" 
                   Foreground="#DC2626" 
                   FontWeight="SemiBold" 
                   HorizontalAlignment="Center" 
                   Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
