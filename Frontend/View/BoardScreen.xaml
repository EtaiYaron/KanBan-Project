<Window x:Class="IntroSE.Kanban.Frontend.View.BoardScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BoardScreen" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="{Binding Path=EmailMsg, Mode=OneWay}"  FontSize="18" HorizontalAlignment="Center"/>
            <Label Content="Here are you board:" Margin="0,10,0,0"/>
            <DataGrid ItemsSource="{Binding Boards}" x:Name="dataGridView" SelectionMode="Single">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <EventSetter Event="MouseDoubleClick" Handler="DataGridRow_MouseDoubleClick"/>
                    </Style>
                </DataGrid.RowStyle>
            </DataGrid>
            <Button Content="Create Board" Margin="0,20,0,0" Width="100" Click="CreateBoard_Click"/>
            <Button Content="Delete Board"  Margin="0,20,0,0" Width="100" Click="DeleteBoard_Click"/>
            <Button Content="Logout" Margin="0,20,0,0" Width="100" Click="Logout_Click"/>
            <Label Content="{Binding Path=ErrorMessage, Mode=OneWay}" Foreground="Red" HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
