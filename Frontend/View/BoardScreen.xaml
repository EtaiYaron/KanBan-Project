<Window x:Class="IntroSE.Kanban.Frontend.View.BoardScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BoardScreen" Height="500" Width="900"
        Background="#14122E"
        FontFamily="Segoe UI">

    <Grid>
        <StackPanel Margin="40" HorizontalAlignment="Center" VerticalAlignment="Top" Width="800">

            <TextBlock Text="{Binding Path=EmailMsg, Mode=OneWay}"  
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Foreground="#FFFFFF" 
                       Margin="0,0,0,20"/>

            <Label Content="Here are your boards:" 
                   FontSize="18" 
                   FontWeight="SemiBold" 
                   Foreground="#FFFFFF"  
                   Margin="0,0,0,10"/>

            <DataGrid ItemsSource="{Binding Boards}" 
                      x:Name="dataGridView" 
                      SelectionMode="Single" 
                      AutoGenerateColumns="True"
                      RowBackground="#1F2937" 
                      AlternatingRowBackground="#2C3E50" 
                      BorderBrush="#374151"
                      Background="#1F2937"
                      Foreground="#FFFFFF"
                      HeadersVisibility="Column"
                      HorizontalAlignment="Center"
                      Width="800"
                      Margin="0,0,0,20"
                      FontSize="14">
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <EventSetter Event="MouseDoubleClick" Handler="DataGridRow_MouseDoubleClick"/>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="Background" Value="#8CC6E1"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Padding" Value="10,5"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>
            </DataGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Create Board"
                        Width="140" Height="44" Margin="10,0"
                        Click="CreateBoard_Click"
                        FontSize="15" FontWeight="Bold"
                        Foreground="#14122E" Background="#FFFFFF"
                        BorderBrush="#14122E" BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#14122E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Delete Board"
                        Width="140" Height="44" Margin="10,0"
                        Click="DeleteBoard_Click"
                        FontSize="15" FontWeight="Bold"
                        Foreground="#14122E" Background="#FFFFFF"
                        BorderBrush="#14122E" BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#14122E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Logout"
                        Width="140" Height="44" Margin="10,0"
                        Click="Logout_Click"
                        FontSize="15" FontWeight="Bold"
                        Foreground="#14122E" Background="#FFFFFF"
                        BorderBrush="#14122E" BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#14122E"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <Label Content="{Binding Path=ErrorMessage, Mode=OneWay}" 
                   Foreground="#DC2626" 
                   FontWeight="SemiBold"
                   FontSize="14"
                   HorizontalAlignment="Center" 
                   Margin="0,20,0,0"/>
        </StackPanel>
    </Grid>
</Window>
