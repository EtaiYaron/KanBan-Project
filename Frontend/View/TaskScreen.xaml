<Window x:Class="IntroSE.Kanban.Frontend.View.TaskScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntroSE.Kanban.Frontend.View"
        mc:Ignorable="d"
        Closing="TaskScreen_Closing"
        Title="TaskScreen" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="{Binding Path=TaskMsg, Mode=OneWay}" HorizontalAlignment="Center" FontSize="25"/>
            <Label Content="{Binding Path=Owner, Mode=OneWay}"/>
            <StackPanel Orientation="Horizontal">
                <Label Content="Members of board: " VerticalAlignment="Center"/>
                <ItemsControl ItemsSource="{Binding JoinedUsers}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal" Margin="5"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" Margin="5" />
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
            <Label Content="Backlog tasks:" Margin="0,5,0,0"/>
            <DataGrid ItemsSource="{Binding Backlog}">
            </DataGrid>
            <Label Content="In progress tasks:" Margin="0,10,0,0"/>
            <DataGrid ItemsSource="{Binding InProgress}">
            </DataGrid>
            <Label Content="Done tasks:" Margin="0,10,0,0"/>
            <DataGrid ItemsSource="{Binding Done}">
            </DataGrid>
            <Button Content="Back" Margin="0,20,0,0" Width="100" Click="Back_Click"/>
        </StackPanel>
    </Grid>
</Window>
