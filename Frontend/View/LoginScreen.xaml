<Window x:Class="IntroSE.Kanban.Frontend.View.LoginScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LoginScreen" Height="500" Width="800"
        Background="#14122E"
        FontFamily="Segoe UI">

    <Grid>
        <StackPanel Margin="40" HorizontalAlignment="Center" VerticalAlignment="Center" Width="420">

            <TextBlock Text="Welcome to Kanban!" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,30"
                       Foreground="#FFFFFF"/>

            <Label Content="Email:" 
                   FontSize="16" 
                   Foreground="#E0E1DD" 
                   Margin="0,0,0,5"/>
            <TextBox Text="{Binding Path=Email, Mode=OneWayToSource}"
                     FontSize="16"
                     Padding="10"
                     Background="#2C3E50"
                     Foreground="#FFFFFF"
                     BorderBrush="#9CA3AF"
                     Margin="0,0,0,20"/>

            <Label Content="Password:" 
                   FontSize="16" 
                   Foreground="#E0E1DD" 
                   Margin="0,0,0,5"/>
            <TextBox Text="{Binding Path=Password, Mode=OneWayToSource}"
                     FontSize="16"
                     Padding="10"
                     Background="#2C3E50"
                     Foreground="#FFFFFF"
                     BorderBrush="#9CA3AF"
                     Margin="0,0,0,30"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Margin="0,0,0,20">
                <Button Content="Login"
                        Width="130" Height="44"
                        Margin="0,0,10,0"
                        Click="Login_Click"
                        Background="#FFFFFF"
                        Foreground="#14122E"
                        FontWeight="Bold"
                        FontSize="15"
                        BorderBrush="#1B263B"
                        BorderThickness="2"/>
                <Button Content="Register"
                        Width="130" Height="44"
                        Click="Register_Click"
                        Background="#FFFFFF"
                        Foreground="#14122E"
                        FontWeight="Bold"
                        FontSize="15"
                        BorderBrush="#1B263B"
                        BorderThickness="2"/>
            </StackPanel>

            <Label Content="{Binding Path=ErrorMessage, Mode=OneWay}" 
                   Foreground="#DC2626" 
                   FontWeight="SemiBold"
                   FontSize="14"
                   HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
