<Window x:Class="IntroSE.Kanban.Frontend.View.CreateBoardScreen"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"  
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"  
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
        xmlns:local="clr-namespace:IntroSE.Kanban.Frontend.View"  
        mc:Ignorable="d"  
        Title="Create Board" Height="450" Width="800"
        Background="#14122E"
        FontFamily="Segoe UI">

    <Grid>
        <StackPanel Margin="40" HorizontalAlignment="Center" VerticalAlignment="Center" Width="420">
            <TextBlock Text="Create a New Board" 
                       FontSize="32" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center" 
                       Margin="0,0,0,30" 
                       Foreground="#FFFFFF"/>

            <Label Content="Board Name:" 
                   FontSize="16" 
                   FontWeight="SemiBold" 
                   Foreground="#E0E1DD" 
                   Margin="0,0,0,5"/>
            <TextBox Text="{Binding Path=Name, Mode=OneWayToSource}" 
                     FontSize="16" 
                     Padding="10" 
                     Background="#2C3E50" 
                     Foreground="#FFFFFF" 
                     BorderBrush="#9CA3AF" 
                     BorderThickness="1" 
                     Margin="0,0,0,20"/>

            <Label Content="{Binding Path=Owner, Mode=OneWay}" 
                   FontSize="14" 
                   Foreground="#9CA3AF" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Create" 
                        Width="130" Height="44"
                        Margin="10,0"
                        Click="CreateBoard_Click"
                        FontSize="15" FontWeight="Bold"
                        Foreground="#14122E" Background="#FFFFFF"
                        BorderBrush="#8CC6E1" BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#8CC6E1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button Content="Back" 
                        Width="130" Height="44"
                        Margin="10,0"
                        Click="Back_Click"
                        FontSize="15" FontWeight="Bold"
                        Foreground="#14122E" Background="#FFFFFF"
                        BorderBrush="#8CC6E1" BorderThickness="0"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}"
                                                CornerRadius="6"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="Center"
                                                              VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#8CC6E1"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <Label Content="{Binding Path=ErrorMessage, Mode=OneWay}" 
                   Foreground="#DC2626" 
                   FontWeight="SemiBold" 
                   FontSize="14"
                   HorizontalAlignment="Center" 
                   Margin="0,30,0,0"/>
        </StackPanel>
    </Grid>
</Window>
